<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfeae1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="huseyinkaragoz.app.android.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_title"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_text_vertical_margin"
        style="@style/TitleStyle"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/media_streamer"
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/textView"
        android:layout_alignEnd="@id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="@dimen/activity_button_vertical_margin"
        style="@style/AllButton"/>
    <Button
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:text="@string/super_duo1"
        android:id="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/button"
        android:layout_alignEnd="@id/button"
        android:layout_below="@+id/button"
        android:layout_marginBottom="@dimen/activity_button_vertical_margin"
        style="@style/AllButton"/>
    <Button
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:text="@string/super_duo2"
        android:id="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/button2"
        android:layout_alignEnd="@id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginBottom="@dimen/activity_button_vertical_margin"
        style="@style/AllButton"/>
    <Button
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:text="@string/ant_terminator"
        android:id="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/button3"
        android:layout_alignEnd="@id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginBottom="@dimen/activity_button_vertical_margin"
        style="@style/AllButton"/>
    <Button
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:text="@string/materialize"
        android:id="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/button4"
        android:layout_alignEnd="@id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginBottom="@dimen/activity_button_vertical_margin"
        style="@style/AllButton"/>
    <Button
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:text="@string/capstone"
        android:id="@+id/button6"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/button5"
        android:layout_alignEnd="@id/button5"
        android:layout_below="@+id/button5"
        android:layout_marginBottom="@dimen/activity_button_vertical_margin"
        style="@style/CapstoneStyle"/>

</RelativeLayout>
